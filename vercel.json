{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "headers": [
    {
      "source": "/nav/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    },
    {
      "source": "/webcomponent/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" }
      ]
    },
    {
      "source": "/common-nav.css",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" }
      ]
    }
  ],
  "redirects": [
    { "source": "/tutorials", "destination": "/tutorials/", "permanent": true },
    { "source": "/profile", "destination": "/profile/", "permanent": true }
  ],
  "rewrites": [
    { "source": "/nav/(.*)", "destination": "/$1" },
    
    { "source": "/blogs", "destination": "https://megamind-blogs.vercel.app/blogs" },
    { "source": "/blogs/(.*)", "destination": "https://megamind-blogs.vercel.app/blogs/$1" },

    { "source": "/tutorials/", "destination": "https://megamind-tutorials.vercel.app/" },
    { "source": "/tutorials/(.*)", "destination": "https://megamind-tutorials.vercel.app/$1" },

    { "source": "/profile/", "destination": "https://megamind-profile.vercel.app/" },
    { "source": "/profile/(.*)", "destination": "https://megamind-profile.vercel.app/$1" },

    { "source": "/", "destination": "https://megamind-blogs.vercel.app/" },
    { "source": "/(.*)", "destination": "https://megamind-blogs.vercel.app/$1" }
  ]
}