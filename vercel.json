{
  "$schema": "https://openapi.vercel.sh/vercel.json",

  "headers": [
    {
      "source": "/nav/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
    ,
    {
      "source": "/webcomponent/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    },
    {
      "source": "/common-nav.css",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" }
      ]
    },
    {
      "source": "/nav-fragment",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ],

  "rewrites": [
    {
      "source": "/blogs/:path*",
      "destination": "https://megamind-blogs.vercel.app/blogs/:path*"
    },
    {
      "source": "/profile/:path*",
      "destination": "https://megamind-profile.vercel.app/:path*"
    },
    {
      "source": "/tutorials/:path*",
      "destination": "https://megamind-tutorials.vercel.app/:path*"
    },
  { "source": "/", "destination": "https://megamind-blogs.vercel.app/blogs/" }
  ]
}